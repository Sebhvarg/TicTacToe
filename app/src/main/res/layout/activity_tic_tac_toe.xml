<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgvs"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TÃ­tulo del juego -->

    <!-- Tablero de juego (3x3 GridLayout) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnexit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/exit" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="651dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:text="Abandonar juego"
            android:textAlignment="textStart"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cpubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cputext"
            android:layout_width="200dp"
            android:layout_height="37dp"

            android:layout_weight="1"

            android:fontFamily="@font/roboto_medium"
            android:text="CPU"
            android:textAlignment="textEnd"
            android:textColor="#BE0413"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cpuimg"
            android:layout_width="2sp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cpu" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="3">

            <!-- Botones para cada celda del tablero -->
            <Button
                android:id="@+id/button_00"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_01"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_02"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_10"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_11"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_12"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_20"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_21"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/button_22"
                style="xml/style.xml"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F0F0EF"
                android:fontFamily="@font/designer"
                android:textAlignment="center"
                android:textColor="#BF0413"
                android:textSize="45sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000000"
                app:strokeWidth="3dp" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerbar2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/playerimg"
            android:layout_width="5dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/player1" />

        <TextView
            android:id="@+id/playertext"
            android:layout_width="180dp"
            android:layout_height="37dp"

            android:layout_weight="1"

            android:fontFamily="@font/roboto_medium"
            android:text="JUGADOR"
            android:textAlignment="viewStart"
            android:textColor="#418EBE"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Mensaje de turno -->

</LinearLayout>
